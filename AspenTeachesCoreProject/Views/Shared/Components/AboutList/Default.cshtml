@using EntityLayer.Concrete
@model List<About>

<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">@item.Title</h2>
                    <p>@item.Description</p>
                    <div class="row mt-3">
                        <div class="col-sm-10">
                            <div class="pb-1"><i>“It’s never too late to give up what you are doing and start doing what you realize you love.”</i> <b> -Hans Rosling</b> </div>
                        </div>
                        <br />
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@item.ImageUrl" width="400" height="400" alt="aspen" /></div>
            </div>
        }
    </div>
</div>
