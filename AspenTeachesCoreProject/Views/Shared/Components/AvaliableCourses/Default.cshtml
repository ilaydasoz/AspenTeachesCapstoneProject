@using EntityLayer.Concrete
@model List<Course>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Courses</h4>
                <p class="text-muted mb-1">Course Status</p>
            </div>
            <div class="row">
                <div class="col-12">
                    @foreach(var item in Model) { 
                    <div class="preview-list">
                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <a href="#" class="avatar rounded-circle mr-5">
                                    <img alt="Image placeholder" src=@item.Image>
                                </a>
                            </div>

                            <div class="preview-item-content d-sm-flex flex-grow">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">@item.Title</h6>
                                    <p class="text-muted mb-0">Hour: @item.Hour</p>
                                </div>
                                <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                    <p class="text-muted"> Avaliable </p>

                                </div>
                            </div>

                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>