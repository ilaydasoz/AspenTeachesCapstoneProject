@using EntityLayer.Concrete
@model List<Course>

<div class="section px-2 px-lg-4 pt-5" id="courses">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Avaliable Courses</h2>
        </div>
            <div class="text-center">
                <p class="mx-auto mb-3" style="max-width:600px"> Click on one of them to find out more! </p>
            </div>

        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            
            @foreach (var item in Model)
            {
                <div class="grid-item">
                    <a href="https://dribbble.com">
                        <figure class="portfolio-item">
                            <img src="@item.Image" data-bp="#" />
                            <figcaption>
                                <h4 class="h5 mb-0">@item.Title</h4>
                                <div>@item.Description</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
